<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.boson</id>
    <name>Boson PHP</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.json</depends>
    <depends>com.jetbrains.php</depends>
    <depends>HtmlTools</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider
                language="PHP"
                implementationClass="com.github.xepozz.boson.components.WebComponentsLineMarkerProvider"/>
        <xml.tagNameProvider implementation="com.github.xepozz.boson.components.WebComponentsTagNameProvider"/>
        <xml.elementDescriptorProvider
                implementation="com.github.xepozz.boson.components.WebComponentsTagDescriptorProvider"/>
        <codeInsight.declarativeInlayProvider
                implementationClass="com.github.xepozz.boson.components.inlay.WebComponentsInlayHintsProvider"
                group="CODE_VISION_GROUP"
                isEnabledByDefault="true"
                language="PHP"
                nameKey="web_components.name"
                providerId="boson-component-name"/>
        <fileBasedIndex implementation="com.github.xepozz.boson.index.ConfigIndex"/>
        <fileBasedIndex implementation="com.github.xepozz.boson.index.WebComponentsDefinitionIndex"/>
        <fileBasedIndex implementation="com.github.xepozz.boson.index.WebComponentsAliasesIndex"/>
    </extensions>
</idea-plugin>
